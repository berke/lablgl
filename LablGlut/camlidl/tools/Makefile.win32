all: camlidldll

camlidldll: camlidldll.tpl ../config/Makefile
	sed -e 's|%%CAMLLIB%%|$(OCAMLLIB)|' -e '/^camllib=/s|/|\\|g' camlidldll.tpl > camlidldll

install:
	cp camlidldll $(BINDIR)
	cp camlidlcompat.h $(OCAMLLIB)/caml

clean:
	rm -f camlidldll

depend:
